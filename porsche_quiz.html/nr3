<script>
const questions = [
  {q:"In welchem Jahr wurde Porsche gegr√ºndet?",a:["1931","1948","1950","1963"],c:1},
  {q:"Wie hei√üt das Porsche-Logo-Tier?",a:["L√∂we","Pferd","Stier","Adler"],c:1},
  {q:"Welches Modell gilt als Ikone der Marke?",a:["944","Cayenne","911","718"],c:2},
  {q:"Wo befindet sich der Hauptsitz von Porsche?",a:["Berlin","Zuffenhausen","Ingolstadt","Leipzig"],c:1},
  {q:"Was bedeutet das 'S' bei 911 Carrera S?",a:["Sport","Super","Speed","Special"],c:0},
  {q:"Welches Modell war der erste Porsche?",a:["356","550 Spyder","911","Boxster"],c:0},
  {q:"Wie viele Zylinder hat ein klassischer 911?",a:["4","6","8","12"],c:1},
  {q:"Was ist PDK bei Porsche?",a:["Allradantrieb","Doppelkupplungsgetriebe","Hybrid","Abgasfilter"],c:1},
  {q:"Wo ist das Porsche Museum?",a:["Hamburg","Stuttgart","M√ºnchen","Wolfsburg"],c:1},
  {q:"Wie lautet der Porsche-Slogan?",a:["Vorsprung durch Technik","Nichts ist unm√∂glich","Es gibt keinen Ersatz","The Ultimate Driving Machine"],c:2}
];

const startBtn=document.getElementById("startBtn");
const quizDiv=document.getElementById("quiz");
const resultDiv=document.querySelector(".result");
const programDiv=document.querySelector(".program");
const car=document.getElementById("car");

startBtn.onclick=()=>{
  startBtn.style.display="none";
  showQuestion(0);
};

function showQuestion(i){
  if(i>=questions.length){ showResult(); return; }
  quizDiv.innerHTML="";
  const q=questions[i];
  const div=document.createElement("div");
  div.className="question";
  div.innerHTML=`<h2>${q.q}</h2>`;
  const answers=document.createElement("div");
  answers.className="answers";
  q.a.forEach((ans,index)=>{
    const btn=document.createElement("button");
    btn.textContent=ans;
    btn.onclick=()=>{
      if(index===q.c){
        btn.classList.add("correct");
        setTimeout(()=>showQuestion(i+1),700);
      }else{
        btn.classList.add("wrong");
        setTimeout(()=>btn.classList.remove("wrong"),700);
      }
    };
    answers.appendChild(btn);
  });
  div.appendChild(answers);
  quizDiv.appendChild(div);
  div.style.display="block";
}

function showResult(){
  quizDiv.style.display="none";
  resultDiv.style.display="block";
  car.style.left="120%";
  const audio=new Audio("https://www.fesliyanstudios.com/play-mp3/387");
  audio.play();
  setTimeout(()=>{ resultDiv.style.display="none"; programDiv.style.display="block"; },6000);
}
</script>
